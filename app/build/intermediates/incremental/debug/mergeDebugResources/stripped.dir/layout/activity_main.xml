<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".MainActivity">


    <!-- Main Content Area -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:layout_marginBottom="4dp">

        <!-- Character Preview Area (80% of screen) -->
        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:layout_marginEnd="4dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp">

            <!-- Large Visual Character Preview -->
            <com.mywardrobechoices.views.CharacterPreviewView
                android:id="@+id/characterPreview"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        </androidx.cardview.widget.CardView>

        <!-- Right Panel for Items (20% of screen) -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <!-- Categories -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerCategories"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:padding="2dp" />

            <!-- Items in 2 columns -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerItems"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:padding="2dp" />

        </LinearLayout>

    </LinearLayout>

    <!-- Action Button -->
    <Button
        android:id="@+id/btnSaveOutfit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ðŸ’¾ Save Outfit"
        android:textColor="@color/white"
        android:backgroundTint="@color/teal_700"
        android:textSize="16sp"
        android:padding="16dp" />

</LinearLayout>